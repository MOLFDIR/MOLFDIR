C
C     The essential double group symmetry information.
C
C     MXREP is the number of fermion or boson irreps in the Abelian
C     subgroup. It is doubled at some places (MULTB) where we need
C     both kind of irreps at the same time. Usually loops run
C     only over either fermion or boson irreps at a time.
C
      PARAMETER (MXREP=32)
      COMMON /SYMI/ NSYMRP,NREP,MULTB(MXREP*2,MXREP*2,2)
      COMMON /SYMC/ REPN(16),REPNA(MXREP*2) 
      CHARACTER*4 REPN,REPNA
      COMMON /SYML/ SPFR
      LOGICAL SPFR
      COMMON /DIMS/ NDIMT1,NDIMT2,NFOO,NFVO,NFVV,NV1,NV2,NV3,NV4,NV5,NV6
     &              ,NDIMX,NDIMY
C     Sub dimensions of symmetry packed arrays.
      COMMON /SYMD/ NE(MXREP),NO(MXREP),NV(MXREP),NC(MXREP),
     & MOO(MXREP),MVO(MXREP),MVV(MXREP),
     & NOO(MXREP),NOV(MXREP),NVO(MXREP),NVV(MXREP),
     & NOOT(MXREP),NVVT(MXREP),
     & NOOOT(MXREP),NVOOT(MXREP),NVVOT(MXREP),NVVVT(MXREP),NOVO(MXREP),
     & NVOO(MXREP),NOVVT(MXREP),NOOVT(MXREP)
C     Pointers for symmetry packed arrays.
      COMMON /SYMP/ IO(MXREP+1),IV(MXREP+1),IOO(MXREP+1),
     &              IVO(MXREP+1),IVV(MXREP+1),JVOXX(MXREP+1),
     & JOOOO(MXREP+1),JVOOO(MXREP+1),JVVOO(MXREP+1),JVOVO(MXREP+1),
     & JVVVO(MXREP+1),J2VOVO(MXREP+1),J2VOOO(MXREP+1),
     & IOOOOTT(MXREP+1),IVOOOT(MXREP+1),IVVOOTT(MXREP+1),IVOVO(MXREP+1),
     & IVOVVT(MXREP+1),IVVVVTT(MXREP+1),IVVOO(MXREP+1),IVVOOT(MXREP+1),
     & KVVOOT(MXREP+1),KOOOVT(MXREP+1),KVOOV(MXREP+1),KVOOO(MXREP+1),
     & KOOOOT(MXREP+1),KOOVVT(MXREP+1),KOOVOT(MXREP+1),KVVVOT(MXREP+1),
     & LOOOOT(MXREP+1),LVVOOT(MXREP+1),LOVOOT(MXREP+1),LVOOOT(MXREP+1),
     & LOOVO(MXREP+1),LVOVO(MXREP+1),LOVVOT(MXREP+1),
     & IIOOT(MXREP,MXREP),IIOV(MXREP,MXREP),IIVO(MXREP,MXREP),
     & IIVV(MXREP,MXREP),IIVVT(MXREP,MXREP),
     & JJOO(MXREP,MXREP),JJVO(MXREP,MXREP),JJVV(MXREP,MXREP),
     & KKOOOT(MXREP,MXREP),KKVVOT(MXREP,MXREP),
     & KKVOO(MXREP,MXREP),KKOOVT(MXREP,MXREP),
     & LLOOOT(MXREP,MXREP),LLVOOT(MXREP,MXREP),LLOVO(MXREP,MXREP),
     & LLOVVT(MXREP,MXREP),LLVVVT(MXREP,MXREP),
     & IVVVT(MXREP+1,MXREP),JVVVT(MXREP+1,MXREP),IVVVTMX,NVVVOTMX,
     & NT3VVT(MXREP),NT3VVVT(MXREP),LLT3VVVT(MXREP,MXREP),
     & KT3VVVOT(MXREP+1)
C     For Fock space : we now have 4 classes of spinors
      COMMON /SYMFSD/ NIO(MXREP),NIV(MXREP),NAO(MXREP),NAV(MXREP),
     &                NSO(MXREP),NSV(MXREP),
     & NIVIO(MXREP),NAVAO(MXREP),NAVSO(MXREP),NSOAV(MXREP),NAOSV(MXREP),
     & NIOIOT(MXREP),NAOAOT(MXREP),NAVAVT(MXREP),NIVIVT(MXREP),
     & NIVIVIOT(MXREP),NIOIOIVT(MXREP),NSVSVT(MXREP),NSOSOT(MXREP),
     & NSVSVSOT(MXREP),NSVSOSOT(MXREP),NSVSVAVT(MXREP)
      COMMON /SYMFSP/ IAVAV(MXREP+1),IAOAO(MXREP+1),IAVSO(MXREP+1),
     & KIVIVIOAVT(MXREP+1),KIOIOIVAOT(MXREP+1),KSVSVSOAVT(MXREP+1),
     & KSVSVAVAVT(MXREP+1),
     & LAOSVSOSOT(MXREP+1),IISOAV(MXREP,MXREP),KKIVIVIOT(MXREP,MXREP),
     & KKIOIOIVT(MXREP,MXREP),KKSVSVSOT(MXREP,MXREP),
     & KKSVSVAVT(MXREP,MXREP),
     & LLSVSOSOT(MXREP,MXREP)
